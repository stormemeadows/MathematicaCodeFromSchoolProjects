FindOddOutVerts[g_]:=Select[VertexList@g,OddQ[VertexOutDegree[g,#]]&];
FindVertsWithUnequalInAndOutDegrees[g_]:=Select[VertexList[g],(VertexInDegree[g,#]=!= VertexOutDegree[g,#])&];

FindVertsWithUnequalInAndOutDegrees1[g_]:=Block[{
in,out,verts={}
},(

